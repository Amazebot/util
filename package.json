{
  "name": "root",
  "description": "Node.js utilities that provide common dependencies to bot/integration projects.",
  "homepage": "https://github.com/Amazebot/util",
  "repository": "git@github.com:Amazebot/util.git",
  "author": "Tim Kinnane <tim.kinnane@amazebot.chat>",
  "license": "MIT",
  "keywords": [
    "util",
    "chat",
    "chatbot",
    "typescript",
    "log",
    "yargs"
  ],
  "private": true,
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "scripts": {
    "pretest": "lerna bootstrap",
    "test": "nyc mocha **/*.spec.ts",
    "precompile": "yarn test",
    "compile": "rimraf ./packages/*/lib && tsc -b packages",
    "commit": "git-cz",
    "prerelease": "yarn compile",
    "release": "lerna publish",
    "release:local": "yarn release --registry http://localhost:4873 --skip-git",
    "updated": "lerna updated",
    "practice": "lerna publish --skip-git --skip-npm --conventional-commits"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/sinon": "^5.0.7",
    "chai": "^4.2.0",
    "commitizen": "^3.0.5",
    "dotenv": "^6.1.0",
    "husky": "^1.2.0",
    "lerna": "^3.5.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.2",
    "sinon": "^7.1.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.6"
  }
}
