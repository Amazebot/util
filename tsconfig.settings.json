{
  "exclude": ["**/_*.ts", "**/*.spec.ts"],
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "composite": true,
    "sourceMap": false,
    "declaration": true,
    "removeComments": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "types": ["node"]
  }
}
